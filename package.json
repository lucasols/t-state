{
  "name": "t-state",
  "version": "7.3.1",
  "description": "Global state manager for Typescript projects",
  "license": "MIT",
  "author": "Lucas Santos",
  "repository": "github:lucasols/t-state",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test": "vitest --ui",
    "lint": "pnpm tsc && pnpm eslint && pnpm format",
    "eslint": "eslint --ext .jsx,.js,.ts,.tsx src/",
    "format": "prettier --write src/**/*.ts",
    "tsc": "tsc -p tsconfig.prod.json",
    "test:run": "vitest run",
    "build": "pnpm test:run && pnpm lint && pnpm build:no-test",
    "build:no-test": "tsup --minify --dts",
    "npm-publish": "./scripts/check-if-is-sync.sh && pnpm build && npm publish"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@types/use-sync-external-store": "^0.0.3",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitest/ui": "0.26.2",
    "eslint": "^8.30.0",
    "eslint-plugin-jest": "^27.1.7",
    "jsdom": "^20.0.3",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsm": "^2.3.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.3",
    "vitest": "^0.26.2"
  },
  "dependencies": {
    "dequal": "^2.0.3",
    "immer": "^9.0.16",
    "use-sync-external-store": "^1.2.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
