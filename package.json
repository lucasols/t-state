{
  "name": "t-state",
  "version": "9.8.0",
  "description": "Global state manager for Typescript projects",
  "license": "MIT",
  "author": "Lucas Santos",
  "repository": "github:lucasols/t-state",
  "type": "module",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "lint": "pnpm tsc && pnpm eslint && pnpm format",
    "eslint": "eslint src/ test/",
    "format": "prettier src/ --write  --list-different",
    "tsc": "tsc -p tsconfig.prod.json",
    "test:ui": "vitest --ui",
    "tsc:watch": "tsc -p tsconfig.prod.json --watch",
    "test": "vitest run",
    "build": "pnpm test && pnpm lint && pnpm build:no-test",
    "build:no-test": "tsup --dts",
    "pre-publish": "./scripts/check-if-is-sync.sh && pnpm build",
    "npm-publish": "pnpm publish --access=public"
  },
  "devDependencies": {
    "@ls-stack/eslint-cfg": "^0.4.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitest/ui": "3.2.4",
    "eslint": "^9.35.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsm": "^2.3.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "immer": "^10.1.3",
    "nanoid": "^5.1.5"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  }
}
