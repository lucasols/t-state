{
  "name": "t-state",
  "version": "8.10.1",
  "description": "Global state manager for Typescript projects",
  "license": "MIT",
  "author": "Lucas Santos",
  "repository": "github:lucasols/t-state",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test": "vitest --ui",
    "lint": "pnpm tsc && pnpm eslint && pnpm format",
    "eslint": "eslint --ext .jsx,.js,.ts,.tsx src/",
    "format": "prettier --write src/**/*.ts",
    "tsc": "tsc -p tsconfig.prod.json",
    "test:run": "vitest run",
    "build": "pnpm test:run && pnpm lint && pnpm build:no-test",
    "build:no-test": "tsup --minify --dts",
    "npm-publish": "./scripts/check-if-is-sync.sh && pnpm build && npm publish",
    "npm-publish-beta": "pnpm build && npm publish --tag beta"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@types/use-sync-external-store": "^0.0.3",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitest/ui": "0.29.8",
    "eslint": "^8.37.0",
    "eslint-plugin-jest": "^27.2.1",
    "jsdom": "^21.1.1",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsm": "^2.3.0",
    "tsup": "^6.7.0",
    "typescript": "^5.1.6",
    "vite": "^4.2.1",
    "vitest": "^0.30.1"
  },
  "dependencies": {
    "immer": "^10.0.2",
    "nanoid": "^4.0.2",
    "use-sync-external-store": "^1.2.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
