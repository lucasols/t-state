{
  "name": "t-state",
  "version": "9.2.0",
  "description": "Global state manager for Typescript projects",
  "license": "MIT",
  "author": "Lucas Santos",
  "repository": "github:lucasols/t-state",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "lint": "pnpm tsc && pnpm eslint && pnpm format",
    "eslint": "eslint src/",
    "format": "prettier src/ --write  --list-different",
    "tsc": "tsc -p tsconfig.prod.json",
    "test:ui": "vitest --ui",
    "test": "vitest run",
    "build": "pnpm test && pnpm lint && pnpm build:no-test",
    "build:no-test": "tsup --minify --dts",
    "pre-publish": "./scripts/check-if-is-sync.sh && pnpm build",
    "npm-publish": "pnpm publish --access=public"
  },
  "devDependencies": {
    "@ls-stack/eslint-cfg": "^0.1.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.5",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@vitest/ui": "3.0.7",
    "eslint": "^9.21.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsm": "^2.3.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "vitest": "^3.0.7"
  },
  "dependencies": {
    "immer": "^10.1.1",
    "nanoid": "^5.0.6"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
