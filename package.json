{
  "name": "t-state",
  "version": "6.3.1",
  "description": "Global state manager for React hooks written in Typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "run-s test format:* lint:* build:*",
    "build:clean": "rimraf dist",
    "build:lib": "tsc -p tsconfig.prod.json",
    "build:create-pkg": "ts-node scripts/setupPackage.ts",
    "format:prettier": "prettier --write src/**/*.ts",
    "lint:eslint": "eslint --ext .jsx,.js,.ts,.tsx src/",
    "test": "vitest run",
    "test:tsd": "tsd",
    "test:ts": "tsc",
    "test:watch": "vitest --ui",
    "npm-publish": "pnpm build && ./scripts/check-if-is-sync.sh && cd dist && npm publish"
  },
  "repository": {
    "type": "git"
  },
  "author": "Lucas Santos",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.3",
    "@types/node": "^14.14.6",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "@vitest/ui": "0.10.2",
    "cpy-cli": "^3.0.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^2.3.0",
    "jsdom": "^20.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.1",
    "rollup": "^1.31.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-delete": "^1.2.0",
    "tsd": "^0.11.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.3",
    "vitest": "^0.19.1"
  },
  "dependencies": {
    "dequal": "^2.0.3",
    "immer": "^9.0.15"
  },
  "peerDependencies": {
    "react": "^16.14.0 || ^17.0.2"
  }
}
